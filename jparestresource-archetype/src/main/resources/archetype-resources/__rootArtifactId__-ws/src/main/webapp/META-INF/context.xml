#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/${parentArtifactId}-ws">
  <Loader loaderClass="org.springframework.instrument.classloading.tomcat.TomcatInstrumentableClassLoader"/>
    <Resource auth="Container"
              driverClassName="com.mysql.jdbc.Driver"
              logAbandoned="true"
              maxWait="20000"
              name="jdbc/${parentArtifactId}"
              password="${parentArtifactId}"
              username="${parentArtifactId}" validationQuery="SELECT 1"
              removeAbandoned="true"
              removeAbandonedTimeout="100"
              type="javax.sql.DataSource"
              url="jdbc:mysql://localhost:3306/${parentArtifactId}?autoReconnect=true&amp;elideSetAutoCommits=true&amp;useLocalSessionState=true&amp;maintainTimeStats=false&amp;serverTimezone=Europe/Moscow"
    />

</Context>
