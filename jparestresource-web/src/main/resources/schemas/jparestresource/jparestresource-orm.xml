<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 version="2.5">
    <!-- Store uuid as string
        <converter class="ru.ilb.common.jpa.converters.UUIDConverterString" auto-apply="true"/>
    -->
    <!-- Optimized binary uuid storage -->
    <converter class="ru.ilb.common.jpa.converters.UUIDConverterBytes" auto-apply="true"/>
    <mapped-superclass class="ru.ilb.jparestresource.jparestresource.PersistentObject">
        <attributes>
            <id name="id">
                <generated-value strategy="AUTO"/>
            </id>
            <version name="versionId"/>
        </attributes>
    </mapped-superclass>
    <mapped-superclass class="ru.ilb.jparestresource.jparestresource.EntityType">
        <entity-listeners>
            <entity-listener class="ru.ilb.jparestresource.listeners.EntityListener"/>
        </entity-listeners>
        <attributes>
            <basic name="uid">
                <!--<column length="36" nullable="false" name="UID"/>-->
                <!-- optimized binary uuid storage -->
                <column length="16" nullable="false" column-definition="BINARY(16) NOT NULL"/>
                <index unique="true"/>
            </basic>
        </attributes>
    </mapped-superclass>
    <entity class="ru.ilb.jparestresource.jparestresource.Document">
        <named-query name="Document.byUid">
            <query>Select d from Document d where d.uid=:uid</query>
        </named-query>
        <attributes>
            <basic name="direction">
                <column column-definition="int(1)"/>
                <convert>DirectionTypeConverter</convert>
            </basic>
            <one-to-many name="docfiles" mapped-by="document" fetch="LAZY">
                <!-- UNI-directinal: 
                <join-column name="DOCUMENT_ID" referenced-column-name="ID"/> -->
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-many>
        </attributes>
    </entity>
    <entity class="ru.ilb.jparestresource.jparestresource.Docfile">
        <attributes>
            <!-- BI-directinal: -->
            <many-to-one name="document">
                <cascade>
                    <cascade-all/>
                </cascade>
            </many-to-one>
        </attributes>
    </entity>
    <object-type-converter name="DirectionTypeConverter"
                           object-type="ru.ilb.jparestresource.jparestresource.DirectionType" data-type="java.lang.Integer">
        <conversion-value object-value="IN" data-value="0" />
        <conversion-value object-value="OUT" data-value="1" />
    </object-type-converter>
</entity-mappings>
