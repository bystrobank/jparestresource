<?xml version="1.0" encoding="UTF-8"?>
<Context path="/jparestresource-web">
    <!-- example postgres url="jdbc:postgresql://localhost/jparestresource" -->

    <Resource auth="Container" name="jdbc/jparestresource"
              driverClassName="com.mysql.jdbc.Driver"
              logAbandoned="true" maxWaitMillis="20000"
              removeAbandonedOnBorrow="true" removeAbandonedTimeout="100" type="javax.sql.DataSource"
              url="jdbc:mysql://localhost:3306/jparestresource?autoReconnect=true&amp;elideSetAutoCommits=true&amp;useLocalSessionState=true&amp;maintainTimeStats=false&amp;serverTimezone=Europe/Moscow&amp;rewriteBatchedStatements=true"
              validationQuery="SELECT 1"
              username="jparestresource"  password="jparestresource"
/>
    <Environment name="SERVER_ADMIN" override="false" type="java.lang.String" value="root"/>
</Context>
